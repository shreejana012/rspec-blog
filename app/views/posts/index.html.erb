
<% @posts.each do |post| %>
	<h2><%= post.title %> by <%= post.author %> </h2>
	<p>
	<%= post.content %>
    </p>

      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-success' %>
      <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %>
      <%= link_to 'View', post_path(post), class: 'btn btn-sm btn-primary' %>
    <% end %>
