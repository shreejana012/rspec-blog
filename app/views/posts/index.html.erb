
<% @posts.each do |post| %>
<div class = "panel panel-default">
	<div class = "panel-heading">
	<h3><center><%= post.title %></center></h3></div>
	<div class = "panel-body">
	<p>
	<%= post.content %>
    </p>
</div>
<div class = "panel-footer">
			<small> by <%= post.author %></small><br>

      <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-success' %>
      <%= link_to 'Delete', post_path(post), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %>
      <%= link_to 'View', post_path(post), class: 'btn btn-sm btn-primary' %>

  </div>
</div>
    <% end %>
<%= will_paginate @posts %>